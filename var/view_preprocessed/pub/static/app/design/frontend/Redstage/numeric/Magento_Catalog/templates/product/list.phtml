scape */ $secureRenderer->renderStyleAsTag( $position, 'product-item-info_' . $_product->getId() . ' div.product-item-actions' ) : '' ?></li></li> <?php ?> <?php endforeach; ?> <?php if ($cateProductCmsBlock = $block->getChildBlock('category.product.cms')) : ?> <?= $cateProductCmsBlock->toHtml() ?> <?php endif; ?></ol></div><?= $block->getChildBlock('toolbar')->setIsBottom(true)->toHtml() ?> <script type="text/x-magento-init">
