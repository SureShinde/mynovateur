    <body>
        <referenceContainer name="content">
            <block class="Redstage\Carousel\Block\Adminhtml\Slide\Edit" name="redstage_carousel_slide_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Redstage\Carousel\Block\Adminhtml\Slide\Edit\Tabs" name="redstage_carousel_slide_edit_tabs">
                <block class="Redstage\Carousel\Block\Adminhtml\Slide\Edit\Tab\Slide" name="redstage_carousel_slide_edit_tab_slide"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">slide_section</argument>
                    <argument name="block" xsi:type="string">redstage_carousel_slide_edit_tab_slide</argument>
                </action>
            </block>
        </referenceContainer>
    </body>

</page>