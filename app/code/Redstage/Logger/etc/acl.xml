<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Redstage_Base::main_menu" title="Redstage" sortOrder="100">
                    <!-- ACL for Suez menus -->
                    <resource id="Redstage_Logger::logger" title="Suez" translate="title" sortOrder="100">
                        <resource id="Redstage_Logger::loggerinfo" title="Suez API Logs" translate="title" sortOrder="100"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
