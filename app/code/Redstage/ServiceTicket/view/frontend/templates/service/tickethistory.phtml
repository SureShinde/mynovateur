<?= $block->getChildHtml('info') ?>
<?php if ($tickets && count($tickets)): ?>
    <div class="table-wrapper orders-history service-ticket">
        <table class="data table table-order-items history" id="my-orders-table">
            <caption class="table-caption"><?= /* @escapeNotVerified */ __('Orders') ?></caption>
            <thead>
                <tr>
                    <th scope="col" class="col id"><?= /* @escapeNotVerified */ __('Magento ID') ?></th>

                    <th scope="col" class="col id"><?= /* @escapeNotVerified */ __('Ticket No') ?></th>
                    <th scope="col" class="col id"><?= /* @escapeNotVerified */ __('Ticket Status') ?></th>
                </tr>
            </thead>
            <tbody>
                <?php foreach ($tickets as $ticket): ?>
