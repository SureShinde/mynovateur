                        <td data-th="<?= $block->escapeHtml(__('Magento ID')) ?>" class="col id"><?= /* @escapeNotVerified */ $ticket->getEntityId() ?></td>

                        <td data-th="<?= $block->escapeHtml(__('Ticket ID')) ?>" class="col id"><?= /* @escapeNotVerified */ $ticket->getSfServiceticketNo() ?></td>
                         <td data-th="<?= $block->escapeHtml(__('Ticket Status')) ?>" class="col id"><?= /* @escapeNotVerified */ $ticket->getSfServiceticketStatus() ?></td>
                    </tr>
                <?php endforeach; ?>
            </tbody>
        </table>
    </div>
    <?php if ($block->getPagerHtml()): ?>
        <div class="order-products-toolbar toolbar bottom"><?= $block->getPagerHtml() ?></div>
    <?php endif ?>
<?php else: ?>
    <div class="message info empty"><span><?= /* @escapeNotVerified */ __('You have no tickets.') ?></span></div>
