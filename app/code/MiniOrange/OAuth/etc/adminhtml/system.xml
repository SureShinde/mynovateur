                    <label>Authorize Endpoint</label>
                </field>
								<field id="ouath_client_accesstokenendpoint" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="130"
                           translate="label" type="text">
                    <label>AccessToken Endpoint</label>
                </field>
								<field id="ouath_client_getuserinfoendpoint" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="130"
                           translate="label" type="text">
                    <label>Get user info Endpoint</label>
                </field>
								<field id="ouath_client_jwksurl" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="130"
                           translate="label" type="text">
                    <label>JWKS Url</label>
                </field>
            </group>
        </section>
    </system>
</config>
